    <sql id="TABLE_NAME">tb_sys_user</sql>
    <sql id="Base_Column_List">
        `user_id`
        ,`username`,`nickname`,`status`,`open_id`,`is_deleted`,`created_by`,`created_date`,`last_modified_by`,`last_modified_date`
    </sql>

    <select id="findByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_sys_user
        <where>and user_id = #{userId} and is_deleted = false</where>
    </select>

